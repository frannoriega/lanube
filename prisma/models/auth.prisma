model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?    @map("expires_at")
  token_type        String? @map("token_type")
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime @db.Timestamptz(3)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  emailVerified  DateTime?       @map("email_verified") @db.Timestamptz(3)
  image          String?
  passwordHash   String?
  accounts       Account[]
  registeredUser RegisteredUser?
  sessions       Session[]

  @@map("users")
}

model RegisteredUser {
  id               String                @id @default(cuid())
  userId           String                @unique @map("user_id")
  name             String
  lastName         String                @map("last_name")
  dni              String                @unique
  institution      String?
  reasonToJoin     String                @map("reason_to_join")
  role             UserRole              @default(USER)
  createdAt        DateTime              @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt        DateTime              @updatedAt @map("updated_at") @db.Timestamptz(3)
  bans             Ban[]
  checkIns         CheckIn[]
  incidentUsers    IncidentUser[]
  inventories      Inventory[]
  orgMemberships   OrgMembership[]
  commentLikes     ProposalCommentLike[]
  proposalComments ProposalComment[]
  proposalLikes    ProposalLike[]
  proposals        Proposal[]
  purchaseOrders   PurchaseOrder[]
  user             User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reservations     Reservation[]
  teamMembers      TeamMember[]
  userEvents       UserEvent[]

  @@map("registered_users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime @db.Timestamptz(3)

  @@unique([identifier, token])
  @@map("verification_tokens")
}
