// Ban Management

model Ban {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  reason    String
  startTime DateTime  @db.Timestamptz(3) @map("start_time")
  endTime   DateTime? @db.Timestamptz(3) @map("end_time")
  createdAt DateTime  @db.Timestamptz(3) @default(now()) @map("created_at")

  registeredUser RegisteredUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("bans")
}
